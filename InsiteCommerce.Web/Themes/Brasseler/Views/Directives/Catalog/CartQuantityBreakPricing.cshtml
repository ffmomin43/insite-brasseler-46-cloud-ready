
<div class="accordion buymore Buy-More-And-Save" ng-if="(breakPrices && breakPrices.length > 1  &&  cartLine.properties['isMaxVolumeDiscount'] == 'false')">
    <input type="checkbox" id="quantityBreakPricing_{{::(productId)}}" class="accord-check" ng-click="vm.ShowRelatedProducts(cart,cartLine)" />
    <label for="quantityBreakPricing_{{::(productId)}}" class="accord-head" id="quantityBreakPricing_{{::(productId)}}">
        [% translate 'BUY MORE, SAVE MORE! Take advantage of volume discount pricing.' %]
    </label>

    <article class="small-12 accord-content">
        <div>
            <div class="small-12">
                <table class="isc-pricebreaks u-border-none">
                    <tbody>
                        <tr ng-repeat="bp in vm.brkPrices|orderBy:'breakQty'">
                            <td class="col-1" ng-if="bp.breakQty > 0">  [% translate 'Add' %] {{bp.breakQty}}  [% translate 'total pieces more' %]  {{volumeGrpDescription}} [% translate 'and' %]  {{bp.savingsMessage}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="small-12 related-products" ng-if="vm.grpRelatedProducts.length > 0">
                <div class="u-qualifying-products">
                    [% translate 'Qualifying Products' %]
                </div>
                <table class="u-border-none width99">
                    <thead class="pdp-table-heading">
                        <tr>
                            <th> [% translate 'Product #' %]</th>
                            <th> [% translate 'Description' %]</th>
                        </tr>

                    </thead>
                    <tbody class="pdp-table-body">
                        <!--Below <tr> for CartPage -->
                            <tr ng-repeat="rp in vm.grpRelatedProducts">
                                <td><a href="Product/{{rp.name}}">{{rp.name}}</a></td>
                                <td ng-bind="rp.description"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </article>
    </div>
